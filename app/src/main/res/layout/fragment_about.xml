<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_green_flow_foreground"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GreenFlow Group"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:text="HỆ THỐNG THÔNG BÁO và ĐIỀU PHỐI XE RÁC THÔNG MINH"
            app:layout_constraintTop_toBottomOf="@id/tvAppName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/privacy_policy_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvVersion"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân của Khách hàng chỉ được dùng trong những mục đích sau đây"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Hỗ trợ việc bán hàng và mua hàng cho Khách hàng;" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Liên lạc với Khách hàng trong cho mục đích tiếp thị của GreenFLow" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Nâng cao chất lượng dịch vụ và hỗ trợ Khách hàng;" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Giải quyết các sự việc và tranh chấp phát sinh liên quan đến việc sử dụng dịch vụ trên Sàn giao dịch;" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Cung cấp thông tin cho các Cơ quan thực thi Pháp luật theo yêu cầu;" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/privacy_policy_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/privacy_policy_1"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phạm vi thu thập các thông tin mà Ban quản lý Ứng dụng GreenFLow từ Người mua tại mục cập nhật thông tin bao gồm:"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Họ và Tên" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Số điện thoại liên hệ" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Email người dùng" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Giới tính" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Địa chỉ" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/privacy_policy_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/privacy_policy_2"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phạm vi thu thập các thông tin mà Ban quản lý Ứng dụng GreenFlow từ Người bán tại mục đăng ký bán hàng và cập nhật thông tin bao gồm:"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Họ và Tên" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Số điện thoại nguời phụ trách" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Email người phụ trách" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Giới tính" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Địa chỉ" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Mã số thuế, ngày cấp, nơi cấp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/privacy_policy_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/privacy_policy_2"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phạm vi thu thập các thông tin mà Ban quản lý Ứng dụng GreenFlow từ Người bán tại mục đăng ký bán hàng và cập nhật thông tin bao gồm:"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Họ và Tên" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Số điện thoại nguời phụ trách" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Email người phụ trách" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Giới tính" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Địa chỉ" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Mã số thuế, ngày cấp, nơi cấp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>